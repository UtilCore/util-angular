@page
@model ApplicationDto
@*标题*@
@*表单*@
<util-card borderless="true">
    <util-form id="form" label-span="4" control-span="20" gutter="16">
        <util-radio for="Type" on-model-change="changeType($event)"></util-radio>
        <util-form-container ng-if="!isClient">
            <util-input for="Code" />
            <util-input for="Name" />
            <util-switch for="Enabled"></util-switch>
            <util-textarea for="Remark"></util-textarea>
        </util-form-container>
        <util-row justify="End">
            <util-button  on-click="close()">取消</util-button>
            <util-button id="btnSubmit" validate-form="true"  type="Primary" on-click="submit(form,btnSubmit)">确定</util-button>
        </util-row>
    </util-form>
</util-card>