@page
@model ApplicationDto
<util-card borderless="true">
    @*查询表单*@
    <partial name="Index.Query" />
    @*工具按钮*@
    <util-button type="Primary" icon="Plus" on-click="openCreateDialog()">新建</util-button>
    <util-button type="Primary" Danger="true" icon="Delete" on-click="delete()">删除</util-button>
    @*提示语*@
    <util-alert type="Info" show-icon="true" class="my-md">
        已选择<strong class='text-primary'>&nbsp;{{getCheckedLength()}}&nbsp;</strong>行
    </util-alert>
    @*表格*@
    <util-table id="tb_Application" query-param="queryParam" url="application" sort="CreationTime desc" show-size-changer="true">
        <util-td type="Checkbox"></util-td>
        <util-td type="LineNumber"></util-td>
        <util-td for="Code" ellipsis="true"></util-td>
        <util-td for="Name" ellipsis="true"></util-td>
        <util-td for="Enabled" width="120">
            <util-tag color-type="GeekBlue" ng-if="row.enabled">
                启用
            </util-tag>
            <util-tag color-type="Red" ng-if="!row.enabled">
                未启用
            </util-tag>
        </util-td>
        <util-td title="操作" width="300">           
            <util-button type="Link" size="Small" tooltip-title="编辑" on-click="openEditDialog(row)">编辑</util-button>
            <util-divider type="Vertical"></util-divider>
            <util-a href="#">查看</util-a>            
            <util-divider type="Vertical"></util-divider>
            <util-button type="Link" size="Small" danger="true" tooltip-title="删除" on-click="delete(row.id)">删除</util-button>
        </util-td>
    </util-table>
</util-card>