@page
@model ApplicationDto

<util-card borderless="true">
    @*工具按钮*@
    <util-button type="Primary" icon="Plus" on-click="openCreateDialog()">新建</util-button>
    <util-button type="Primary" Danger="true" icon="Delete" on-click="delete()">删除</util-button>
    @*提示语*@
    <util-alert type="Info" show-icon="true">
        已选择<strong class="text-primary mx-md">{{getCheckedLength()}}</strong>行
    </util-alert>
    @*表格*@
    <util-table id="tb_Application" query-param="queryParam" url="application" sort="CreationTime desc" show-size-changer="true">
        <util-td type="Checkbox"></util-td>
        <util-td type="LineNumber"></util-td>
        <util-td for="Code"></util-td>
        <util-td for="Name"></util-td>
        <util-td for="Enabled">
            <util-tag color-type="GeekBlue" ng-if="row.enabled">
                启用
            </util-tag>
            <util-tag color-type="Red" ng-if="!row.enabled">
                未启用
            </util-tag>
        </util-td>
        <util-td title="操作">
            <util-button type="Primary" shape="Circle" icon="Edit" tooltip-title="编辑" on-click="openEditDialog(row)"></util-button>
            <util-button type="Primary" danger="true" shape="Circle" icon="Delete" tooltip-title="删除" on-click="delete(row.id)"></util-button>
        </util-td>
    </util-table>
</util-card>