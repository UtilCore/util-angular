@page
@model ClaimDto
<util-card borderless="true">
    @*查询表单*@
    <partial name="Index.Query" />
    @*工具按钮*@
    <util-button type="Primary" icon="Plus" on-click="add()">新建</util-button>
    <util-button id="btnSave" type="Primary" icon="Save" on-click="save(btnSave)">保存</util-button>
    <util-button danger="true" icon="Delete" on-click="delete()">删除</util-button>
    @*提示语*@
    <util-alert class="my-md" type="Info" show-icon="true">
        已选择<strong class="text-primary mx-md">{{getCheckedLength()}}</strong>行
    </util-alert>
    @*表格*@
    <util-table id="tb_claim" query-param="queryParam" url="claim" sort="SortId">
        <util-td type="Checkbox"></util-td>
        <util-td type="LineNumber"></util-td>
        <util-td for="Name" is-edit="true" width="30%">
            <util-input for="Name" />
        </util-td>
        <util-td for="Enabled" is-edit="true">
            <util-td-display>
                <util-tag color-type="GeekBlue" ng-if="row.enabled">
                    启用
                </util-tag>
                <util-tag color-type="Red" ng-if="!row.enabled">
                    未启用
                </util-tag>
            </util-td-display>
            <util-td-control>
                <util-checkbox for="Enabled"></util-checkbox>
            </util-td-control>
        </util-td>
        <util-td for="SortId" is-edit="true">
            <util-input-number for="SortId"></util-input-number>
        </util-td>
        <util-td for="Remark" is-edit="true" width="30%">
            <util-input for="Remark" />
        </util-td>
        <util-td title="操作" width="300">
            <util-button type="Link" size="Small" on-click="edit(row.id)">编辑</util-button>
            <util-divider type="Vertical"></util-divider>
            <util-button type="Link" size="Small" danger="true" on-click="delete(row.id)">删除</util-button>
        </util-td>
    </util-table>
</util-card>

